@using Microsoft.AspNetCore.Identity
@inject SignInManager<onlineExamApp.Models.ApplicationUser> SignInManager
@inject UserManager<onlineExamApp.Models.ApplicationUser> UserManager

@{
    var title = ViewData["Title"] as string ?? "OnlineExam";
    onlineExamApp.Models.ApplicationUser user = null;
    if (SignInManager.IsSignedIn(User))
    {
        user = await UserManager.GetUserAsync(User);
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - OnlineExam</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/onlineExamApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light sticky-top shadow-sm">
            <div class="container d-flex align-items-center">
                <button class="toggle-btn" id="toggleSidebar">â˜° OnlineExam</button>
                <ul class="navbar-nav ms-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-logout">
                                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                                </button>
                            </form>
                        </li>
                    }

                    else
                    {
                        <li class="nav-item me-2">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <div id="sidebar" class="pt-5" style="height: 100vh; overflow-y: auto;">
        <nav class="nav flex-column p-3">
            @if (user != null)
            {
                <div class="mb-4 mt-5 text-center" style="margin-top: 150px;">
                    <img src="@(!string.IsNullOrEmpty(user.ProfileImagePath) ? user.ProfileImagePath : "/images/defualt_user.png")"
                         alt="Profile"
                         width="60"
                         height="60"
                         class="rounded-circle border border-2 border-secondary" />
                    <div class="nav-link fw-bold mt-2" style="font-size: 1.5rem;">@user.DisplayName</div>
                </div>
            }

            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Student"))
            {
                <a class="nav-link" asp-controller="Students" asp-action="index">Home</a>
                <a class="nav-link" asp-controller="Profile" asp-action="Edit">Profile</a>
                <a class="nav-link" asp-controller="Students" asp-action="AvailableExams">Available Exams</a>
                <a class="nav-link" asp-controller="Students" asp-action="MyResults">My Results</a>
            }

            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Educator"))
            {
                <a class="nav-link" asp-controller="Exams" asp-action="EducatorPage">Home</a>
                <a class="nav-link" asp-controller="Profile" asp-action="Edit">Profile</a>
                <a class="nav-link" asp-controller="Exams" asp-action="Create">Create New Exam</a>
                <a class="nav-link" asp-controller="Exams" asp-action="MyExams">View My Exams</a>
            }

            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <a class="nav-link" asp-controller="Admin" asp-action="index">Home</a>
                <a class="nav-link" asp-controller="Profile" asp-action="Edit">Profile</a>
                <a class="nav-link" asp-controller="Admin" asp-action="ManageUsers">Manage Users</a>
                <a class="nav-link" asp-controller="Admin" asp-action="ExamCompletion">Exam Completion Analytics</a>
                <a class="nav-link" asp-controller="Admin" asp-action="UniversityRanking">University Ranking Analytics</a>
                <a class="nav-link" asp-controller="Admin" asp-action="EducatorPerformance">Educator Performance Analytics</a>
            }
        </nav>
    </div>



    <div class="main-content">
        <div class="content-box container py-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="text-center py-4 text-muted" style="background-color: #fafafa;">
        &copy; @DateTime.Now.Year OnlineExam. All rights reserved.
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById('toggleSidebar').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('collapsed');
            document.body.classList.toggle('sidebar-collapsed');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>















