@using OnlineExamSystem.ViewModels
@model RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box shadow-sm">
        <h2 class="account-title">@Localizer["CreateAccount"]</h2>

        <form asp-action="Register" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <label asp-for="Name" class="form-label">@Localizer["FullName"]</label>
            <input asp-for="Name" class="form-control" placeholder="Your full name" />
            <span asp-validation-for="Name" class="text-danger"></span>

            <label asp-for="Email" class="form-label mt-3">@Localizer["Email"]</label>
            <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="Password" class="form-label mt-3">@Localizer["Password"]</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="********" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <label asp-for="ConfirmPassword" class="form-label mt-3">@Localizer["ConfirmPassword"]</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="********" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            <button type="submit" class="btn btn-primary w-100 btn-lg mt-4">@Localizer["Register"]</button>

            <div class="text-center mt-4">
                <p>
                    @Localizer["HaveAccount"]
                    <a asp-controller="Account" asp-action="Login" class="link-primary">@Localizer["Login"]</a>
                </p>
                <a asp-controller="Account" asp-action="Welcome" class="link-muted">
                    @Localizer["BackToHome"]
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


