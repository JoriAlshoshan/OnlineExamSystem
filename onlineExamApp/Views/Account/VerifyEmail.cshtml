@using Microsoft.AspNetCore.Mvc.Localization
@model onlineExamApp.ViewModel.VerifyEmailViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["VerifyYourEmail"];
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box shadow-sm">
        <h2 class="account-title text-center mb-4">@Localizer["VerifyYourEmail"]</h2>

        <form asp-action="SendResetLink" method="post" novalidate>
            @Html.AntiForgeryToken()

            <label asp-for="Email" class="form-label">@Localizer["EmailAddress"]</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="@Localizer["EmailAddress"]" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <button type="submit" class="btn btn-primary w-100 btn-lg mt-4">@Localizer["SendResetLink"]</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

