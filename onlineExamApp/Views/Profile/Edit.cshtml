@model onlineExamApp.Models.ApplicationUser
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "Edit Profile";
}

<head>
    <link rel="stylesheet" href="~/css/page.css" asp-append-version="true" />
</head>

<div class="container mt-4">
    <h2 class="mb-4">@Localizer["EditProfile"]</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="row">
        <div class="col-md-5">
            <div class="card mb-4 shadow-sm">
                <div class="card-body text-center">
                    <img src="@(Model.ProfileImagePath ?? "/images/default-profile.png")"
                         alt="profile"
                         width="120"
                         height="120"
                         class="rounded-circle border border-2 mb-3" />

                    <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
                        <div class="mb-3 text-start">
                            <label class="form-label">@Localizer["ProfileImageLabel"]</label>
                            <input type="file" name="profileImage" accept=".jpg,.jpeg,.png" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-sm btn-warning w-100">@Localizer["UploadImage"]</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="EditProfile" method="post">
                        <div class="mb-3">
                            <label asp-for="DisplayName" class="form-label">@Localizer["FullName"]</label>
                            <input asp-for="DisplayName" class="form-control" />
                            <span asp-validation-for="DisplayName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                            <input asp-for="Email" class="form-control" disabled />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Localizer["University"]</label>
                            <input type="text" class="form-control" value="@Model.University" disabled />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Localizer["NewPassword"]</label>
                            <input type="password" name="NewPassword" class="form-control" minlength="6" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Localizer["ConfirmPassword"]</label>
                            <input type="password" name="ConfirmPassword" class="form-control" minlength="6" />
                        </div>

                        <div class="alert alert-secondary small">
                            @Localizer["PasswordHelp"]
                        </div>

                        <div class="text-end mt-3">
                            <button type="submit" class="btn btn-success me-2">@Localizer["SaveChanges"]</button>
                            <a href="@ViewBag.ReturnUrl" class="btn btn-secondary">@Localizer["Back"]</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




