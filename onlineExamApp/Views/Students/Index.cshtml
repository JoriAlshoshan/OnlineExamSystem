@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["StudentPage"];
}

<head>
    <link rel="stylesheet" href="~/css/page.css" asp-append-version="true" />
</head>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="mb-4 display-4 fw-bold">@Localizer["WelcomeToStudentPortal"]</h1>
        <p class="lead">
            @Localizer["StudentPortalDescription"]
        </p>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-5 mb-4">
            <div class="card h-100 border-0 shadow-lg">
                <div class="card-body text-center">
                    <h4 class="card-title mb-3">üìù @Localizer["AvailableExams"]</h4>
                    <p class="card-text text-muted">
                        @Localizer["AvailableExamsDescription"]
                    </p>
                    <a href="/Students/AvailableExams" class="btn btn-outline-primary">@Localizer["StartNow"]</a>
                </div>
            </div>
        </div>

        <div class="col-md-5 mb-4">
            <div class="card h-100 border-0 shadow-lg">
                <div class="card-body text-center">
                    <h4 class="card-title mb-3">üìà @Localizer["MyResults"]</h4>
                    <p class="card-text text-muted">
                        @Localizer["MyResultsDescription"]
                    </p>
                    <a href="/Students/MyResults" class="btn btn-outline-success">@Localizer["ViewResults"]</a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <p class="fst-italic">
            @Localizer["StudentPortalQuote"]
        </p>
    </div>
</div>


