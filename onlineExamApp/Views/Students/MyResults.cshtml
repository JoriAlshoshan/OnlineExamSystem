@model List<onlineExamApp.Models.StudentExamAttempt>

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["MyResults"];
}

<head>
    <link rel="stylesheet" href="~/css/page.css" asp-append-version="true" />
</head>

<div class="container mt-4">
    <h2 class="mb-4">@Localizer["MyExamResults"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">@Localizer["NoExamsTaken"]</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-sm rounded">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>@Localizer["Exam"]</th>
                        <th>@Localizer["Subject"]</th>
                        <th>@Localizer["Score"]</th>
                        <th>@Localizer["SubmittedOn"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var attempt in Model)
                    {
                        <tr class="text-center align-middle">
                            <td>@attempt.Exam.Title</td>
                            <td>@attempt.Exam.Subject</td>
                            <td>
                                <span class="badge bg-info">
                                    @attempt.Score
                                </span>
                            </td>
                            <td>@attempt.SubmittedTimeUtc?.ToLocalTime().ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>




