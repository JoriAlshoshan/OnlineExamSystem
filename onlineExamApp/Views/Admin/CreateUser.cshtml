@model onlineExamApp.ViewModel.CreateUserViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["AddNewUser"];
}

<h2>@Localizer["AddNewUser"]</h2>

<form asp-action="CreateUser" method="post" class="needs-validation" novalidate autocomplete="off">

    <div class="mb-3">
        <label asp-for="DisplayName">@Localizer["DisplayName"]</label>
        <input asp-for="DisplayName" class="form-control" autocomplete="off" />
        <span asp-validation-for="DisplayName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email">@Localizer["Email"]</label>
        <input asp-for="Email" class="form-control" autocomplete="off" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password">@Localizer["Password"]</label>
        <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="University">@Localizer["University"]</label>
        <select asp-for="University" class="form-select" style="max-height: 200px; overflow-y: auto;">
            <option value="" disabled selected>@Localizer["PleaseSelectUniversity"]</option>
            <option value="King Saud University">King Saud University</option>
            <option value="King Abdulaziz University">King Abdulaziz University</option>
            <option value="King Faisal University">King Faisal University</option>
            <option value="Um Al-Qura University">Um Al-Qura University</option>
            <option value="Qassim University">Qassim University</option>
            <option value="Imam Muhammad bin Saud University">Imam Muhammad bin Saud University</option>
            <option value="Prince Sultan University">Prince Sultan University</option>
            <option value="Taif University">Taif University</option>
            <option value="Princess Nourah University">Princess Nourah University</option>
            <option value="King Khalid University">King Khalid University</option>
            <option value="Saudi Government Universities">Saudi Government Universities</option>
            <option value="Najran University">Najran University</option>
            <option value="Jazan University">Jazan University</option>
            <option value="Makkah University">Makkah University</option>
            <option value="Shaqra University">Shaqra University</option>
            <option value="University of Dammam">University of Dammam</option>
            <option value="Hail University">Hail University</option>
            <option value="Unknown">Unknown</option>
        </select>
        <span asp-validation-for="University" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role">@Localizer["Role"]</label>
        <select asp-for="Role" class="form-select" required>
            <option value="" disabled selected>@Localizer["PleaseSelectRole"]</option>
            @foreach (var role in Model.AllRoles)
            {
                <option value="@role">@role</option>
            }
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["Create"]</button>
    <a asp-action="ManageUsers" class="btn btn-secondary ms-2">@Localizer["Cancel"]</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
