@model List<onlineExamApp.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
    var userRoles = ViewData["UserRoles"] as Dictionary<string, IList<string>>;
}
<head>
    <link rel="stylesheet" href="~/css/page.css" asp-append-version="true" />
</head>

<h2 class="mb-4">Manage Users</h2>
<div class="mb-3 text-end">
    <a class="btn btn-success" href="@Url.Action("CreateUser", "Admin")">+ Add New User</a>
</div>

<table class="table table-striped table-bordered align-middle table-green">
    <thead>
        <tr>
            <th class="nowrap-cell" style="width: 220px;">Display Name</th>
            <th>Email</th>
            <th>University</th>
            <th>Roles</th>
            <th style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td class="nowrap-cell text-truncate">@user.DisplayName</td>
                <td>@user.Email</td>
                <td>@(user.University ?? "N/A")</td>
                <td>@string.Join(", ", userRoles[user.Id])</td>
                <td>
                    <a class="btn btn-sm btn-primary me-1" href="@Url.Action("EditUser", "Admin", new { id = user.Id })">Edit</a>
                    <button class="btn btn-sm btn-danger" onclick="confirmDelete('@user.Id', '@user.DisplayName')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmDelete(userId, displayName) {
            Swal.fire({
                title: `Delete user "${displayName}"?`,
                text: "This action cannot be undone!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#198754',
                confirmButtonText: 'Yes, delete!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("DeleteUser", "Admin")/' + userId;
                }
            });
        }
    </script>

    @if (TempData["Success"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: '@TempData["Success"]',
                confirmButtonColor: '#198754'
            });
        </script>
    }

}




