@model onlineExamApp.Models.Question
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteQuestion"];
}

<head>
    <link rel="stylesheet" href="~/css/page.css" asp-append-version="true" />
</head>

<div class="container">
    <h2>@Localizer["DeleteQuestion"]</h2>

    <div class="alert alert-warning">
        @Localizer["DeleteConfirmation"]
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <h5>@Model.Text</h5>
            <p><strong>@Localizer["Points"]:</strong> @Model.Points</p>
            <ul>
                @foreach (var opt in Model.Options)
                {
                    <li>
                        @opt.Text
                        @if (opt.IsCorrect)
                        {
                            <strong class="text-success">(@Localizer["Correct"])</strong>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>

    <form asp-action="DeleteQuestionConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">@Localizer["YesDelete"]</button>
        <a href="/Exams/ManageQuestions?examId=@Model.ExamId" class="btn btn-outline-main ms-2">@Localizer["Cancel"]</a>
    </form>
</div>


